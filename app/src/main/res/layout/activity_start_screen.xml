<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                tools:context="org.jquizmobile.app.StartScreenActivity"
                android:background="@color/primary_background_color">
        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/start_screen_card"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="@dimen/card_radius"
            card_view:cardElevation="@dimen/card_elevation"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true">
            <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    style="@style/MainTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="@string/jquiz_label_text"
                    android:id="@+id/jQuizLabelView"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/view_margin_top"
                    android:layout_marginBottom="@dimen/view_margin_bottom"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:id="@+id/divider"
                    style="@style/AppTheme.Divider"/>
                <Button
                    android:layout_width="@dimen/button_width"
                    android:layout_height="wrap_content"
                    android:text="@string/start_button_text"
                    android:id="@+id/startButton"
                    android:layout_marginTop="@dimen/view_margin_top"
                    android:layout_marginLeft="@dimen/view_margin_top"
                    android:layout_marginRight="@dimen/view_margin_top"
                    android:layout_marginBottom="@dimen/view_margin_bottom"
                    android:padding="@dimen/content_layout_padding"
                    android:onClick="onStartButtonClicked"
                    style="@style/AppTheme.Button"
                    android:layout_gravity="center_horizontal" />
                <Button
                    android:layout_width="@dimen/button_width"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/view_margin_top"
                    android:layout_marginRight="@dimen/view_margin_top"
                    android:layout_marginBottom="@dimen/view_margin_bottom"
                    android:text="@string/highscore_button_text"
                    android:id="@+id/highscoreButton"
                    android:padding="@dimen/content_layout_padding"
                    android:onClick="onHighscoreButtonClicked"
                    style="@style/AppTheme.Button"
                    android:layout_gravity="center_horizontal"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>
</RelativeLayout>
